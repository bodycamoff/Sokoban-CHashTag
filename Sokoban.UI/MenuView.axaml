<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="Sokoban.UI.MenuView">
          <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                    <TextBlock Text="SOKOBAN" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center"/>
            
                    <Button Name="BtnPlay" Content="New Game" Width="200" HorizontalContentAlignment="Center"/>
                    <Button Name="BtnEditor" Content="Level Editor" Width="200" HorizontalContentAlignment="Center"/>
                    <Button Name="BtnExit" Content="Exit" Width="200" HorizontalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
</UserControl>
